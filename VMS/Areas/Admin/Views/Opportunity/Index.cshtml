@using VMS.Utility
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<br />
<h1 class="text-primary">Manage Opportunities</h1>
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Opportunity List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Add New Opportunity</a>
    </div>
</div>
<br />

<div class="btn-group">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Change Opportunity Filter
    </button>
    <div class="dropdown-menu">
        <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Filter_Date')">Most Recent (60 days)</a>
        <div class="dropdown-divider"></div>
        <div class="dropdown-submenu">
            <a class="dropdown-item dropdown-toggle" type="button" data-toggle="dropdown" href="#">By Center Type</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Center_Emergency')">@SD.Center_Emergency</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Center_Medical')">@SD.Center_Medical</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Center_Mental')">@SD.Center_Mental</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Center_Hospice')">@SD.Center_Hospice</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Center_Senior')">@SD.Center_Senior</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Center_Youth')">@SD.Center_Youth</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Center_Homeless')">@SD.Center_Homeless</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" onclick="filterOpportunities('@SD.Center_Pet')">@SD.Center_Pet</a>
            </div>
        </div>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#" onclick="filterOpportunities('')">All</a>
    </div>
</div>


<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Opportunity</th>
                <th>Center Type</th>
                <th>Date Posted</th>
                <th>Open</th>
                <th></th>           @*extra header for Matches button*@
                <th></th>           @*extra header for the Edit and Delete buttons*@
            </tr>
        </thead>
    </table>
</div>

<!-- Modal -->
<div class="modal" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-primary" id="modal-title">Modal title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/opportunity.js"></script>
}
